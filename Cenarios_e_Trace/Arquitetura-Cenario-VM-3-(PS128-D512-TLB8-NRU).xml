<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE AmnesiaConfiguration SYSTEM "Configuration/amnesia.dtd">
<?xml-stylesheet type="text/css" href="teste.css"?>

<AmnesiaConfiguration>

    <Processor>
        <processorContains>0</processorContains>
        <createTraceFile>0</createTraceFile>
    </Processor>

    <Trace>
        <wordSize>4</wordSize>
    </Trace>
    <CPU>
        <wordSize>4</wordSize>
    </CPU>

    <!-- MainMemory: blockSize = cache.lineSize padronizada (8) -->
    <MainMemory>
        <blockSize>1</blockSize>
        <memorySize>1024</memorySize>
        <ciclesPerAccessRead>1</ciclesPerAccessRead>
        <ciclesPerAccessWrite>2</ciclesPerAccessWrite>
        <timeCicle>1</timeCicle>
    </MainMemory>

    <!-- 
        Tamanho da página: 128 bytes
        Tamanho total da memória secundária (disco): 512 bytes
        Algoritmo de substituição da tabela de páginas: NRU
        Tamanho da TLB: 8 entradas
        Algoritmo de substituição da TLB: LRU
    -->
    <VirtualMemory>
        <pageSize>128</pageSize>
        <diskMemorySize>512</diskMemorySize>
        <diskCiclesPerAccessRead>10</diskCiclesPerAccessRead>
        <diskCiclesPerAccessWrite>20</diskCiclesPerAccessWrite>
        <timeCicle>100</timeCicle>
        <pageTableReplacementAlgorithm>NRU</pageTableReplacementAlgorithm>
        <TLBType>unified</TLBType>
        <unifiedTLB>
            <memorySize>8</memorySize>
            <ciclesPerAccessRead>1</ciclesPerAccessRead>
            <ciclesPerAccessWrite>2</ciclesPerAccessWrite>
            <timeCicle>1</timeCicle>
            <replacementAlgorithm>LRU</replacementAlgorithm>
        </unifiedTLB>
    </VirtualMemory>

</AmnesiaConfiguration>
